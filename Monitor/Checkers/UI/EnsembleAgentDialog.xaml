<Window x:Class="Monitor.Checkers.UI.EnsembleAgentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monitor.Checkers.UI"
        mc:Ignorable="d"
        Title="Agent parameters" Height="270" Width="570"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow" BorderThickness="3" BorderBrush="Gray"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width= "*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height= "50" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" VerticalAlignment="Stretch">
            <local:EnsembleAgentControl x:Name="AgentControl"/>
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Click="OkButton_OnClick" Content="Ok" Margin="10" Width="70"/>
            <Button Name ="CancelButton" Click="CancelButton_OnClick" Content="Cancel" Margin="10" Width="70"/>
        </StackPanel>
    </Grid>
</Window>
